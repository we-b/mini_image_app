<h3>トップページ</h3>
<h3><%= link_to '新規投稿', new_message_path%></h3>
<% @messages.each do |message| %>
  <%= message.content%>
  <div class="messages">
    <% message.images.each do |image| %>
      <%= image_tag image, if class: 'images' %>  
    
  <%= link_to '編集', edit_message_path(message.id)%>
<% end %>